<configuration>
  <!-- Stop output INFO at start -->
        <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="nl.vroste.zio.kinesis" level="DEBUG"/>
    <!-- This warns about cancelled SubscribeToShard requests -->
    <logger name="software.amazon.awssdk.http.nio.netty.internal" level="ERROR"/>

    <!-- <logger name="software.amazon.kinesis" level="INFO"/> -->
    <!-- <logger name="software.amazon.awssdk.profiles.internal" level="ERROR"/> -->
    <!-- <logger name="software.amazon.awssdk.request" level="DEBUG"/> -->
    <!-- <logger name="io.netty" level="DEBUG"/> -->
</configuration>